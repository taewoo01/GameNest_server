{
  "compilerOptions": {
    "target": "ES2020",               
    "module": "CommonJS",             
    "outDir": "dist",
    "rootDir": "src",                 
    "moduleResolution": "node",       
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "ts-node": {
    "esm": false                      
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
